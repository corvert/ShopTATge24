@model ShopTARge24.Models.SpaceShips.SpaceShipCreateUpdateViewModel

@if (Model.Id.HasValue)
{
	<h1>Update Spaceship</h1>

}
else
{
	<h1>Create Spaceship</h1>
}




<div>
	<form method="post" enctype="multipart/form-data">
		<input asp-for="Id" type="hidden"	/>
		<input asp-for="CreatedAt" type="hidden"	/>
		<input asp-for="ModifiedAt" type="hidden"	/>
		
		<div class="form-group row">
			<label asp-for="Name" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Name" class="form-control"  />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Classification" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Classification" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="BuildDate" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="BuildDate" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Crew" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Crew" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="EnginePower" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="EnginePower" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Files" class="col-sm-2 col-form-label">Upload Files</label>
			<div class="col-sm-5">
				<div class="custom-file">
					<input asp-for="Files" type="file" class="form-control" multiple />
				</div>
			</div>
		</div>

		@foreach(var images in Model.Image)
		{
			<partial name="_Images" model="images"/>
			<input asp-action="RemoveImage" asp-controller="spaceships" asp-route-imageId="@images.ImageId" type="submit" class="btn btn-primary" value="Remove image" />

			
		}
		<hr/>

		@if (Model.Id.HasValue)
		{
			<input asp-action="update" asp-controller="spaceships" type="submit" class="btn btn-primary" value="Update" />
		}
		else
		{
			<input asp-action="create" asp-controller="spaceships" type="submit" class="btn btn-primary" value="Create" />

		}
		|
		<a asp-action="Index" asp-controller="spaceships" class="btn btn-success">Back</a>


		
	</form>
</div>