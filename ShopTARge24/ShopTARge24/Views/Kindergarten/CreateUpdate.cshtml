@model ShopTARge24.Models.Kindergarten.KindergartenCreateUpdateViewModel

@if (Model.Id != Guid.Empty)
{
	<h1>Update Kindergarten</h1>
}
else
{
	<h1>Create Kindergarten</h1>
}

<div>
	<form method="post" enctype="multipart/form-data">
	<input asp-for="Id" type="hidden"/>	
	<input asp-for="CreatedAt" type="hidden"/>	
	<input asp-for="UpdatedAt" type="hidden"/>

		<div class="form-group row">
			<label asp-for="GroupName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="GroupName" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="ChildrenCount" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="KindergartenName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="KindergartenName" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="TeacherName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="TeacherName" class="form-control" />
			</div>
		</div>


		<div class="form-group row">
			<label asp-for="Files" class="col-sm-2 col-form-label">Upload Files</label>
			<div class="col-sm-5">
				<div class="custom-file">
					<input asp-for="Files" type="file" class="form-control" multiple />
				</div>
			</div>
		</div>

		@foreach (var images in Model.Image)
		{
			<div>
			<partial name="_Images" model="images" />|
			<input asp-action="removeImage" asp-controller="kindergarten" asp-route-imageId="@images.ImageId" type="submit" class="btn btn-success" value="Remove Image" />
			</div>

		}

		@if(Model.Id != Guid.Empty)
		{
			<input asp-action="update" asp-controller="kindergarten" type="submit" class="btn btn-primary" value="Update" />
		}
		else
		{
			<input asp-action="create" asp-controller="kindergarten" type="submit" class="btn btn-primary" value="Create" />
		}

		<a asp-action="Index" asp-controller="kindergarten" class="btn btn-success">Back</a>

	</form>
</div>